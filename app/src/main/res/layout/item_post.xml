<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".MainActivity">

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/imv_profile_pic"
      android:layout_width="80dp"
      android:layout_height="80dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:src="@drawable/child"
      android:layout_margin="16dp"
      />
  <TextView
      android:id="@+id/tv_profile_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/imv_profile_pic"
    app:layout_constraintTop_toTopOf="@id/imv_profile_pic"
    android:layout_margin="8dp"
      android:text="@string/username"
      android:textStyle="bold"
      android:textSize="14sp"
      />
  <TextView
     android:id="@+id/tv_post_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/tv_profile_name"
      app:layout_constraintStart_toStartOf="@id/tv_profile_name"
      android:text="@string/post_time"
      android:layout_marginTop="8dp"
      />
<ImageView
    android:layout_width="15dp"
    android:layout_height="15dp"
  android:src="@drawable/ic_earth"
  app:layout_constraintStart_toEndOf="@id/tv_post_time"
  app:layout_constraintTop_toTopOf="@id/tv_post_time"
  app:layout_constraintBottom_toBottomOf="@id/tv_post_time"
  android:layout_marginStart="5dp"
  />
  <ImageView
     android:id="@+id/imv_options"
      android:layout_width="16dp"
      android:layout_height="15dp"
    android:src="@drawable/ic_options"
      app:layout_constraintTop_toTopOf="@id/tv_profile_name"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <TextView
      android:id="@+id/tv_post_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:autoLink="web"
      android:text="Buckle up,because change is coming to WordPress
http://unblast.com/color-schemes"
      android:textColor="@color/textColor"
      android:textColorLink="@color/blue"
      app:layout_constraintTop_toBottomOf="@id/imv_profile_pic"
      tools:layout_editor_absoluteX="200dp" />

  <ImageView
      android:id="@+id/imv_post_image"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:adjustViewBounds="true"
      android:src="@drawable/child"
      app:layout_constraintTop_toBottomOf="@id/tv_post_content"
      tools:layout_editor_absoluteX="24dp" />

  <TextView
      android:id="@+id/tv_like_counts"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/imv_post_image"
      app:layout_constraintStart_toStartOf="parent"
      android:text="12"
      android:textSize="14sp"
      android:drawableStart="@drawable/smaller_like"
      android:padding="8dp"
      />
<ImageView
    android:id="@+id/imv_drop_down_menu"
    android:layout_width="15dp"
    android:layout_height="15dp"
  app:layout_constraintTop_toTopOf="@id/imv_profile_chooser"
  app:layout_constraintEnd_toEndOf="parent"
    android:src="@drawable/ic_drop_down_menu"
    app:layout_constraintBottom_toBottomOf="@id/imv_profile_chooser"/>

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/imv_profile_chooser"
      android:layout_width="24dp"
      android:layout_height="24dp"
    android:src="@drawable/child"
      android:layout_marginTop="8dp"
      app:layout_constraintEnd_toStartOf="@id/imv_drop_down_menu"
      app:layout_constraintTop_toBottomOf="@id/imv_post_image"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:text="1 share"
      android:textSize="14sp"
      app:layout_constraintEnd_toStartOf="@id/imv_profile_chooser"
      app:layout_constraintTop_toTopOf="@id/imv_profile_chooser"
      app:layout_constraintBottom_toBottomOf="@id/imv_profile_chooser"
      android:layout_marginEnd="8dp"
      />
<View
  android:id="@+id/separator"
    android:layout_width="match_parent"
    android:layout_height="1dp"
  app:layout_constraintTop_toBottomOf="@id/tv_like_counts"
  android:background="@android:color/darker_gray"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/separator"
android:weightSum="3"
      android:paddingHorizontal="16dp"
      >
<com.google.android.material.button.MaterialButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:background="@android:color/transparent"
    app:icon="@drawable/ic_like_action"
    android:text="like"
    android:textColor="@color/textColor"
    app:iconSize="24dp"
    app:iconTintMode="screen"
    app:iconTint="@android:color/transparent"
    android:textAllCaps="false"
   android:layout_weight="1"
    />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:icon="@drawable/ic_comment_action"
        android:text="comment"
        android:textColor="@color/textColor"
        app:iconSize="24dp"
        app:iconTintMode="screen"
        app:iconTint="@android:color/transparent"
        android:textAllCaps="false"
        android:layout_weight="1"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:icon="@drawable/ic_share_action"
        android:text="share"
        android:textColor="@color/textColor"
        app:iconSize="24dp"
        app:iconTintMode="screen"
        app:iconTint="@android:color/transparent"
        android:textAllCaps="false"
        android:layout_weight="1"/>
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>